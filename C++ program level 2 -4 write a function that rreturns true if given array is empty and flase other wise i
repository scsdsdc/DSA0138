 #include <iostream>

template <typename T, size_t N>
bool is_array_empty(T (&arr)[N]) {
    return N == 0;
}

int main() {
    int empty_array[] = {};
    int non_empty_array[] = {1, 2, 3};

    std::cout << "Is empty_array empty? " << std::boolalpha << is_array_empty(empty_array) << std::endl;
    std::cout << "Is non_empty_array empty? " << std::boolalpha << is_array_empty(non_empty_array) << std::endl;

    return 0;
}
