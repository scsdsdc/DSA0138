#include<iostream>
using namespace std;

int main() {
    int num, sum_odd = 0, sum_even = 0;
    
    cout << "Enter a positive integer: ";
    cin >> num;

    for(int i = 1; i <= num; i++) {
        if(i % 2 == 0) {
            sum_even += i;
        } else {
            sum_odd += i;
        }
    }

    cout << "Sum of even numbers from 1 to " << num << ": " << sum_even << endl;
    cout << "Sum of odd numbers from 1 to " << num << ": " << sum_odd << endl;

    return 0;
}
